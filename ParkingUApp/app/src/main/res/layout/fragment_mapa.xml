<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        tools:context=".ui.mapa.MapaFragment"
        android:paddingBottom="24dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_mapa"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_foreground" android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:contentDescription="Logo Universidad"
                app:tint="?attr/colorPrimary" />
        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vehiculo_registrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_mapa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehículo Activo:"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_patente_activa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Patente: XYZ-123"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"/>

                <TextView
                    android:id="@+id/text_tipo_vehiculo_activo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Tipo: Auto"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnPrimaryContainer"/>

                <TextView
                    android:id="@+id/text_modelo_activo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Modelo: Nissan March"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnPrimaryContainer"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/frame_mapa_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_vehiculo_registrado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_border_background"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_qr_placeholder"
                    android:scaleType="centerInside"
                    android:contentDescription="Código QR" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plaza elegida"
                        android:gravity="center"
                        android:background="?attr/colorSurfaceVariant"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/text_nombre_plaza"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Nombre plaza"
                        android:gravity="center"
                        android:background="?attr/colorSurfaceContainerLowest"
                        android:textAppearance="?attr/textAppearanceTitleMedium"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/reserva_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/frame_mapa_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simulación de Reserva"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Sede">
                <AutoCompleteTextView
                    android:id="@+id/inputSede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingVertical="16dp"
                    tools:text="Sede Casa Central"
                    android:focusable="false"
                    android:clickable="true"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutFecha"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Fecha de Reserva">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    tools:text="15/11/2025" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tu Espacio"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:id="@+id/parking_spot_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="3"
                android:useDefaultMargins="true"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:background="@drawable/rounded_border_background">
                <TextView
                    android:id="@+id/spot_A1" android:text="A1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:background="@drawable/bg_parking_spot_grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="A2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:background="@drawable/bg_parking_spot_grid"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="A3"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:background="@drawable/bg_parking_spot_grid"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="A4"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:background="@drawable/bg_parking_spot_grid"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="60dp"/>
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutHoraInicio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:hint="Hora Inicio"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputHoraInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        tools:text="08:00"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutHoraTermino"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:hint="Hora Término"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputHoraTermino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        tools:text="10:00"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReservarEspacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:text="Reservar Espacio (Simulado)" />

        </LinearLayout>

        <View
            android:id="@+id/mapa_estacionamiento"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_mapa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>